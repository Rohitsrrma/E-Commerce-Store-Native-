<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="DemoThemeMaterialComponent" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>

        <!-- Defining that new color in ColorPrimaryDark -->
        <item name="colorPrimaryDark">@color/first_color</item>

        <item name="colorAccent">@color/black</item>
    </style>

    <style name="DemoThemeAppCompat" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>

        <!-- Defining that new color in ColorPrimaryDark -->
        <item name="colorPrimaryDark">#0D05F0</item>
        <item name="android:navigationBarColor">#00FFFFFF</item>
        <item name="colorAccent">@color/white</item>

    </style>


    <!-- Base application theme. -->
    <style name="Theme.ECommerceAndroidApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>


    </style>



</resources>