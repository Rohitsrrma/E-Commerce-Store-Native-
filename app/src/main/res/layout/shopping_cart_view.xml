<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/constraintcategory"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    android:background="@drawable/ripple_recycler"
    android:paddingHorizontal="10dp"



    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">






    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/shoppingCartItemImage"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:src="@drawable/electronics"
        />

    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="15dp"
        app:layout_constraintStart_toEndOf="@+id/shoppingCartItemImage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/shoppingCartItemName"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Electronics &amp; Gadgets"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/shoppingCartItemImage"
            app:layout_constraintTop_toTopOf="@id/shoppingCartItemImage"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/shoppingCartItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="5 Item(s)"
            android:textColor="#919092"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/shoppingCartItemImage"
            app:layout_constraintTop_toBottomOf="@id/shoppingCartItemName" />



        <View

            app:layout_constraintStart_toEndOf="@id/shoppingCartItemImage"
            android:layout_marginLeft="20dp"
            android:paddingBottom="12dp"
            android:layout_marginTop="10dp"
            android:background="@color/BottomLineColor"
            android:layout_width="340dp"
            android:layout_height="1dp"

            />
    </LinearLayout>
    <TextView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/TV_total_price"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/cash_green"
android:paddingBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="40 USD"
        />




</androidx.constraintlayout.widget.ConstraintLayout>
